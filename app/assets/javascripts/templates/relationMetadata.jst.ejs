<div class="relation-metadata">
  <h3><%= metadata_title %>:</h3>
  <textarea id="metadata_description_<%= index %>" name="metadata_description_<%= index %>"
            class="metadata_description tinymce" data-components="editor" data-height="100">
  </textarea>
  <div class="wrapper" data-components="dateRange">
    <div class="time-field">
      <label for="metadata_start_date_<%=index%>"><%= start_date_label %></label>
      <input type="text" name="metadata_start_date_<%=index%>" class="metadata_start_date" data-date-range="from" />
    </div>
    <div class="time-field">
      <label for="metadata_end_date_<%=index%>"><%= end_date_label %></label>
      <input type="text" name="metadata_end_date_<%=index%>" class="metadata_end_date" data-date-range="to" />
    </div>
  </div>
</div>
