<ul class="toolbar" role="toolbar">
  <% tools_list(object, local_assigns[:only] || :all).each do |tool| %>
    <li title="<%= tool[:title] %>">
      <a class="<%= 'active' if request.path == tool[:url] %>" href="<%= tool[:url] %>" role="button">
        <%= icon tool[:icon], '', :class => "fa-lg fa-fw" %>
      </a>
    </li>
  <% end %>
</ul>
