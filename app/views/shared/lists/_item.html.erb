<li class="list-item <%= presenter.class_name %>" data-listItem-id="<%= presenter.identifier %>">
  <div class="wrapper">
    <% if presenter.checkbox? %>
      <div class="item-checkbox">
        <input type="checkbox" value="<%= presenter.id %>">
      </div>
    <% end %>
    <a class="item-avatar-link" href="<%= presenter.url %>" title="<%= presenter.name %>">
      <div class="item-avatar">
        <%= presenter.avatar %>
      </div>
    </a>
    <div class="item">
      <div class="item-controls">
        <%= presenter.controls %>
      </div>
      <div class="item-content">
        <a href="<%= presenter.url %>" title="<%= presenter.name %>">
          <h2 class="item-title"><%= presenter.title %></h2>
          <p class="item-excerpt"><%= presenter.description %></p>
        </a>
        <%= presenter.tags %>
      </div>
    </div>
  </div>
</li>
