<li class="list-item <%= item.type %>">
  <div class="wrapper">
    <div class="item-avatar"></div>
    <div class="item">
      <h2 class="item-title"><a href="<%= item.url %>" title="<%= item.title %>"><%= truncate(item.title, length: 40) %></a></h2>
      <p class="item-excerpt"><%= truncate(item.description) %></p>
    </div>
    <div class="item-controls">
      <% if local_assigns[:control] == :counters %>
        <%= render 'shared/counters', :object => item, :user => @user, :small => true %>
      <% end %>
    </div>
  </div>
</li>
