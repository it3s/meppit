          <%= icon 'home', '', :class => 'fa-lg fa-fw' %>
          <span class="text">Av Paulista, 7000, São Paulo, SP</span>
        </li>

        <li class="contact-item">
          <%= icon 'road', '', :class => 'fa-lg fa-fw' %>
          <span class="text">São Paulo</span>
        </li>

        <li class="contact-item">
          <%= icon 'paperclip', '', :class => 'fa-lg fa-fw' %>
          <span class="text">apt 800</span>
        </li>

        <li class="contact-item">
          <%= icon 'laptop', '', :class => 'fa-lg fa-fw' %>
          <span class="text">www.meppit.com</span>
        </li>

        <li class="contact-item">
          <%= icon 'envelope', '', :class => 'fa-lg fa-fw' %>
          <span class="text">contato@meppit.com</span>
        </li>

        <li class="contact-item">
          <%= icon 'twitter', '', :class => 'fa-lg fa-fw' %>
          <span class="text">@meppit</span>
        </li>

        <li class="contact-item">
          <%= icon 'facebook', '', :class => 'fa-lg fa-fw' %>
          <span class="text">www.facebook.com/meppit</span>
        </li>

        <li class="contact-item">
          <%= icon 'compass', '', :class => 'fa-lg fa-fw' %>
