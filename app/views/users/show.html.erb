<%= render 'shared/toolbar', :object => @user, :only => user_tools(@user)%>

<div id="user-profile" >
  <div class="left-pane">
    <div class="user-avatar">
      <%= image_tag @user.avatar.thumb.url, :alt => 'user picture' %>
    </div>

    <div class="user-location">
      <% if @user.location %>
        <div class="map" data-components="map" data-geojson='<%= raw @user.location_geojson %>'></div>
      <% else %>
        <div data-components='overlay' data-overlay='<%= {style: "dark", message: t("users.profile.location.empty")}.to_json %>'>
        <%= image_tag "imgs/map-placeholder.png", :alt => 'user location', :class => 'placeholder' %>
      </div>
      <% end %>
    </div>

    <div class="user-projects">
      <h2><%= t 'users.profile.projects' %></h2>
      <ul>
        <li class="user-projects-item">
          <%= image_tag "imgs/aldeias-infantis.png" %>
          <span><a href="#" >Aldeias Infantis</a></span>
        </li>
        <li class="user-projects-item">
          <%= image_tag "imgs/heliopolis-verde.png" %>
          <span><a href="#">Verdejando heliopolis</a></span>
        </li>
      </ul>
    </div>
  </div>

  <div class="central-pane">
    <h1 class="user-name"><%= @user.name %></h1>

    <%= render 'shared/contacts', :object => @user %>

    <div class="user-about">
      <h2><%= t 'users.profile.about_me.title' %></h2>
      <div class="user-about-text">
        <% if @user.about_me.blank? %>
          <%= t 'users.profile.about_me.empty', :name => @user.name.split.first %>
        <% else %>
          <%= raw @user.about_me %> </div>
        <% end %>
    </div>

    <div class="user-contributions">
      <h2><%= t 'users.profile.last_contributions' %></h2>
      <%= render 'updates/last_updates' %>
    </div>

  </div>
</div>
