<header class="wrapper">
  <div class="main-title">
    <% if edit_mode? %>
      <h1 class="name"><%= f.input :name %></h1>

    <% else %>
      <h1 class="name"><%= user.name %></h1>
      <time class="joined" datetime="<%= user.created_at.to_datetime.rfc3339 %>">
        <%= t 'users.profile.joined', date: user.created_at.to_s(:month_and_year) %>
      </time>

    <% end %>
  </div>
  <%= render('shared/counters', presenter: CountersPresenter.new(object: user, ctx: self, size: :big)) unless edit_mode? %>
</header>
