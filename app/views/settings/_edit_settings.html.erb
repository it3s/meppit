<section class="edit-settings wrapper">

  <header><h1>Update settings</h1></header>

  <%= form_for user.settings, url: settings_path, html: {method: 'patch'} do |f| %>

    <p>
      <%= f.label :language, 'Language' %>
      <%= f.select :language, language_options %>
    </p>

    <p>
      <%= f.label :auth_token, 'API Token' %>
      <span class="auth_token inline"><%= user.settings.auth_token%></span>
    </p>

    <p>
      <%= f.submit 'save changes' %>
    </p>
  <% end %>

</section>
