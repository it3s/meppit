<div id="comments" data-components="list" data-list='{"scroll": {"behavior": "local"}}'>

  <%= form_tag url_for([object, :comments]), method: :post, id: "comment-form",
               remote: true, "data-components" => "remoteForm" do %>

    <textarea id="comment_comment" class="comment_input tinymce"
              data-components="editor" data-editor-options='{"height":70}' >
    </textarea>

    <%= submit_tag 'Add comment' %>

  <% end %>

  <ul id="comments-list" class="list comments-list">
    <%= render comments %>
  </ul>
</div>
