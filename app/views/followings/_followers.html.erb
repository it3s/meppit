<section>
  <br>
  <h2><%= icon "star", t('followings.followers') %></h2>
  <div id="followers" class="list-container" data-components="list">
    <div id="followers-pagination"><%= paginate @followers, :remote => true %></div>
    <ul id="followers-list" class="list contributions-list">
      <% unless @followers.empty? %>
        <%= render @followers, :size => :small, :control => :counters %>
      <% else %>
        <p><%= t 'followings.empty.followers', {name: @followable.try(:name)} %></p>
      <% end %>
    </ul>
  </div>
</section>
