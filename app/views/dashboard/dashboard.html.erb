<div class="site-page full dashboard">
  <div class="central-pane">
    <section class="newsfeed">
      <div id="activity" data-components="list">
        <%= render "activities/activities_list", activities: @activities, paginate_params: {controller: 'activities', action: 'news_feed'} %>
      </div>
    </section>
  </div>
  <div class="side-pane">
    <% if current_user.admin? %>
    <section class="moderation">
      <h2><%= t 'dashboard.panes.moderation.title' %></h2>
      <div id="moderation" data-components="list">
        <%= render 'flags/list', flags: @unsolved_flags, type: 'unsolved' %>
      </div>
    </section>
    <% end %>
    <section class="contributions">
      <h2><%= t 'dashboard.panes.maps.title' %></h2>
      <div id="contributions" data-components="list">
        <%= render "contributings/contributions_list", contributions: @maps, size: :small, paginate_params: {controller: 'contributings', action: 'maps', user_id: current_user.id} %>
      </div>
    </section>
  </div>
</div>
