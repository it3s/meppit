<div class="site-page imports edit">

  <header class="title">
    <h1><%= t 'import.edit.title', fname: @import.source.file.filename %></h1>
  </header>

  <div class="import-file">
    <label><%= t 'import.edit.file_field' %>: </label>
    <p class="field file" >
      <input type="file" class="file-field" name="import[source]"
             data-components="importUploader"
             data-importuploader-options='<%= {url: import_path(@import), update: true }.to_json %>' />
    </p>
  </div>

  <ul class="parsed-data-list">
    <% @parsed_data.each_with_index do |data, index| %>
      <%= render 'imports/parsed_data', presenter: ParsedDataPresenter.new(data: data, index: index, ctx: self) %>
    <% end %>
  </ul>

</div>
