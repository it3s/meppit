<section id="login-box" data-components="modal" >

  <header>
    <h1><%=  t 'sessions.login' %></h1>
  </header>

  <div>
    <ul id="external_providers">
      <%= render 'sessions/external_login', :provider => :google %>
      <%= render 'sessions/external_login', :provider => :facebook %>
      <%= render 'sessions/external_login', :provider => :twitter %>
    </ul>

    <%= render 'shared/vertical_separator' %>

    <%= render "sessions/login_form" %>
  </div>
</section>
