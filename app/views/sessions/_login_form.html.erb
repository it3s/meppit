<%= form_tag do_login_url, method: :post,
                           id: 'login-form',
                           class: 'login-form',
                           remote: true,
                           'data-mpt-components' => 'remoteForm' do %>
  <p>
    <%= label_tag :email, t('sessions.form.login.email') %>
    <%= email_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password, t('sessions.form.login.password') %>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= check_box_tag :remember_me, true, true %>
    <%= label_tag :remember_me, t('sessions.form.login.remember_me') %>
  </p>

  <div class="action-links">
    <%= link_to_modal t('sessions.form.login.forgot_password'), forgot_password_users_path, :remote => true %>
  </div>
  <div class="action-links">
    <%= link_to_modal t('sessions.form.login.create_account'), new_user_path, :remote => true %>
  </div>

  <p>
    <%= submit_tag t('sessions.form.login.submit') %>
  </p>
<% end %>
