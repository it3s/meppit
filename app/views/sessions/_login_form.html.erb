<%= form_tag "#user_login", :method => :post, :id => 'login-form'  do %>
  <p>
    <%= label_tag :email, t('sessions.forms.login.email') %>
    <%= email_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password, t('sessions.forms.login.password') %>
    <%= password_field_tag :password %>
  </p>
  <div class="action-links">
    <%= link_to t('sessions.forms.login.forgot_password'), '#forgot_password' %>
  </div class="action-links">
  <div class="action-links">
    <%= link_to t('sessions.forms.login.create_account'), '#create_account' %>
  </div class="action-links">
  <p>
    <%= submit_tag t('sessions.forms.login.submit') %>
  </p>
<% end %>
