<section class="main-content">

  <div class="data-tabs" data-components="tabs">
    <ul>
      <li><a href="#content"><%= icon "file-text", t('geo_data.tabs.content') %></a></li>
      <li><a href="#relations"><%= icon "link", t('geo_data.tabs.relations') %></a></li>
      <li><a href="#media"><%= icon "picture-o", t('geo_data.tabs.media') %></a></li>
      <li><a href="#talk"><%= icon "comments", t('geo_data.tabs.talk') %></a></li>
    </ul>

    <div class="tab-content" id="content">
      <div class="main-info">
        <%= f.input :location, :as => :hidden %>
        <div class="description">
          <%= f.input :description, :as => :text, :input_html => {:class => 'tinymce', 'data-components' => 'editor'} %>
        </div>
        <%= render 'shared/additional_info/edit', f: f %>
      </div>
      <div class="extra-info" >
        <%= render 'shared/contacts/edit', :object => geo_data %>
        <div class="tags">
          <%= tags_input f, :tags, geo_data.tags %>
        </div>
      </div>
    </div>
    <div class="tab-content" id="relations">
      <%= render 'relations/edit', f: f %>
    </div>
    <div class="tab-content" id="media">
      <%= render 'pictures/uploader', object: geo_data if params[:action] == 'edit' %>
    </div>
    <div class="tab-content" id="talk">
      <%= render 'comments/list', comments: geo_data.comments, object: geo_data %>
    </div>
  </div>

</section>
