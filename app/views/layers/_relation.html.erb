<li class="list-item geo_data small">
  <div class="wrapper">
    <div class="item-avatar">
      <%= icon 'map-marker', "", class: "relation-item-icon" %>
    </div>
    <div class="item">
      <span class="relation-item-type"> <%= Relation.translated("#{rel[:type]}") %> </span>
      <span class="item-title"> <%= link_to rel[:target][:name], geo_data_path(rel[:target][:id]) %> </span>

      <%= render('relations/metadata', relation_id: rel[:id], metadata: rel[:metadata].with_indifferent_access) if show_relation_metadata?(rel) %>
    </div>
  </div>
</li>
